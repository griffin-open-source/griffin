{
  "name": "griffin-hub",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "app.ts",
  "type": "module",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run build && vitest run",
    "test:watch": "vitest",
    "start": "node dist/server.js",
    "start:standalone": "node dist/server-standalone.js",
    "build": "tsc && npm run copy-migrations",
    "copy-migrations": "cp -r src/storage/adapters/postgres/migrations dist/storage/adapters/postgres/",
    "db:generate": "npm run db:generate:postgres",
    "db:generate:postgres": "tsx node_modules/drizzle-kit/bin.cjs generate --config=drizzle.postgres.config.ts",
    "db:push:postgres": "tsx node_modules/drizzle-kit/bin.cjs push --config=drizzle.postgres.config.ts",
    "griffin": "npx @griffin-app/griffin-cli",
    "watch:ts": "tsc -w",
    "dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js",
    "dev:standalone": "npm run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start:standalone\"",
    "dev:start:standalone": "node --watch dist/server-standalone.js",
    "generate:openapi": "npm run build && node dist/generate-openapi-spec.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.700.0",
    "@aws-sdk/client-sqs": "^3.975.0",
    "@aws-sdk/client-sts": "^3.700.0",
    "@fastify/auth": "^5.0.4",
    "@fastify/autoload": "^6.3.1",
    "@fastify/bearer-auth": "^10.1.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/sensible": "^6.0.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.4",
    "@fastify/type-provider-typebox": "^6.1.0",
    "@griffin-app/griffin-plan-executor": "0.1.12",
    "@griffin-app/griffin-ts": "0.1.12",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "axios": "^1.7.0",
    "better-auth": "^1.4.17",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.0",
    "pg": "^8.16.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.7.10",
    "@griffin-app/griffin-cli": "1.0.6",
    "@hey-api/openapi-ts": "^0.90.3",
    "@types/node": "^22.1.0",
    "@types/pg": "^8.16.0",
    "concurrently": "^9.0.0",
    "drizzle-kit": "^0.31.8",
    "fastify-tsconfig": "^2.0.0",
    "fastify-cli": "^7.3.0",
    "tsx": "^4.19.0",
    "typescript": "~5.6.3",
    "vitest": "^4.0.17"
  }
}
